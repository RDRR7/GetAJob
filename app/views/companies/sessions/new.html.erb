<div class="sign_in">
  <h2 class="title">GetAJob</h2>
  <h3 class="sub_title">Company</h3>
  <p class="sub_title">Sign in</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <a class="input_title">Email</a>
      <br />
      <%= f.email_field :email, autofocus: true %>
      <br />
      <br>
    
      <a class="input_title">Password</a>
      <br />
      <%= f.password_field :password, autocomplete: "off" %>
      <br />
    </div>

    <div class="button_wrapper">
      <%= link_to 'Back', root_path, :class => "button button_gray" %>
      <%= f.submit "Sign in" , :class => "button button_highlight"%>
    </div>
  <% end %>
</div>