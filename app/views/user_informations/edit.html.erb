<div class="edit_user_information">
    <h2 class="title">GetAJob</h2>
    <p class="sub_title">User information</p>

    <%= form_for [@user, @info] do |f| %>
        <div class="field">
            <a class="input_title">Name</a>
            <br />
            <%= f.text_field :name, required: true %>
            <br />
            <br>

            <a class="input_title">About me</a>
            <br />
            <%= f.text_area :about_me, required: true, maxlength: 280  %>
            <br />
            <br>

            <a class="input_title">Contact</a>
            <br />
            <%= f.telephone_field :contact, required: true %>
            <br />
            <br>

            <a class="input_title">Age</a>
            <br />
            <%= f.number_field :age, required: true, min: 0 %>
            <br />
            <br>

            <a class="input_title">Gender</a>
            <br />
            <%= f.select :gender, options_for_select([["Female", 1], ["Male", 2]]) %>
            <br />
            <br>

            <a class="input_title">Education</a>
            <br />
            <%= f.select :education, options_for_select([["Primary education", 1], ["Secondary education", 2], ["Higher education", 3]]) %>
            <br />
        </div>

        <div class="button_wrapper">
            <%= link_to 'Back', user_pages_home_path, :class => "button button_gray button_small" %>
            <%= link_to 'Change status',  user_update_status_path(@info),  method: :put, data: { confirm: 'Are you sure?' }, :class => "button button_highlight button_small" %>
            <%= f.submit "Update" , :class => "button button_highlight button_small"%>
        </div>
    <% end %>
</div>
