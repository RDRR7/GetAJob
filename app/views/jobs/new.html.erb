<div class="new_job">
    <h2 class="title">GetAJob</h2>
    <p class="sub_title">New job</p>

    <%= form_for [@company, @job] do |f| %>
        <div class="field">
            <a class="input_title">Description</a>
            <br />
            <%= f.text_area :description %>
            <br />
            <br>

            <a class="input_title">Age</a>
            <br />
            <%= f.number_field :age %>
            <br />
            <br>

            <a class="input_title">Gender</a>
            <br />
            <%= f.select :gender, options_for_select([["Female", 0], ["Male", 1]]) %>
            <br />
            <br>

            <a class="input_title">Education</a>
            <br />
            <%= f.select :education, options_for_select([["Primary education", 0], ["Secondary education", 1], ["Higher education", 2]]) %>
            <br />
        </div>

        <div class="button_wrapper">
            <%= link_to 'Back', root_path, :class => "button button_gray" %>
            <%= f.submit "Create" , :class => "button button_highlight"%>
        </div>
    <% end %>
</div>