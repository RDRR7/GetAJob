<div class="show_job">
    <h2 class="title">GetAJob</h2>
    <h3 class="sub_title">Job</h3>
    <div class="job">
        <h3>
            Job <%= @job.id %>
        </h3>
        <br>
        <p>
            <a class="field_title">Description:</a><br>
            <%= @job.description %>
        </p>
        <p>
            <% if not @job.age.nil? %>
                <a class="field_title">Age:</a><br>
                <%= @job.age %>
            <% end %>
        </p>
        <p>
            <% if @job.gender == 1 %>
                <a class="field_title">Gender:</a><br>
                Female
            <% elsif @job.gender == 2 %>
                <a class="field_title">Gender:</a><br>
                Male
            <% end %>
        </p>
        <p>
            <% if @job.education == 1 %>
                <a class="field_title">Education:</a><br>
                Primary education
            <% elsif @job.education == 2 %>
                <a class="field_title">Education:</a><br>
                Secondary education
            <% elsif @job.education == 3 %>
                <a class="field_title">Education:</a><br>
                Higher education
            <% end %>
        </p>
        <p>
            <a class="field_title">Category:</a><br>
            <%= Category.find(@job.category_id).name %>
        </p>
        
        <br>
        <% if not current_company.nil? %>
            <%= link_to 'Back', company_pages_home_path, :class => "button button_gray button_small" %>
            <%= link_to 'Change status',  job_update_status_path(@job),  method: :put, data: { confirm: 'Are you sure?' }, :class => "button button_highlight button_small" %>
            <%= link_to "Delete", @job, method: :delete, data: { confirm: "You sure?" }, :class => "button button_highlight button_small" %>
        <% elsif not current_user.nil? %>
            <%= link_to 'Back', user_pages_home_path, :class => "button button_gray button_small" %>
            <% if Interest.where(job_id: @job.id, user_id: current_user.id).first.nil? %>
                <%= link_to 'Show interest',  job_interests_path(@job, user_id: current_user.id),  method: :post, data: { confirm: 'Are you sure?' }, :class => "button button_highlight button_small" %>
            <% end %>    
        <% end %>
    </div>
</div>

<% if not current_company.nil? %>
    <div class="interests">
        <div class="card">
            <h3>
                Users interested
            </h3>
            
            <br>
            <% @job.interests.each do |interest| %>
                <table>
                    <tr>
                        <td><%= interest.user.user_information.name %></td>
                        <% if interest.user.user_information.status %>
                            <td>Unavaliable</td>
                        <% else %>
                            <td>Avaliable</td>
                        <% end %>
                    </tr>
                </table>
            <% end %>            
        </div>
    </div>
<% end %>
